@model RestaurantRaterMVC.Models.Restaurant.RestaurantCreate

@{
        ViewData["Title"] = "Create A Restaurant";
    <h1>Create A Restaurant</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
             <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <label asp-for="Location" class="form-control"></label>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                @Html.LabelFor(r => r.Name)
                @Html.EditorFor(r => r.Name)

                <div class="form-group">
                    <input type="submit" value="Create" class="brn brn-primary" />
                </div>
                <div>
                    <a asp-action="Index">Back To List</a>
                </div>
            </form>
        </div>
    </div>
}

@section scripts 
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}